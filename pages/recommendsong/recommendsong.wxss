/* pages/recommondsong/recommondsong.wxss */
/*  推荐歌曲头部*/
.recommendsongContainer{
  padding: 0;
  margin: 0;
}
.header{
  width: 100%;
  height: 300rpx;
  position: relative;
}
.header image{
  width: 100%;
  height: 100%;
}
.header .date{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-35%,-30%);
  color:#fff;
  width: 150rpx;
  height: 60rpx;
  /* border: 1px solid red; */
  text-align: center;
  line-height: 60rpx;
}
.header .day{
  font-size: 48rpx;
}

/* 设置弧线 */
.out{
  position: absolute;
  top: 280rpx;
  width: 100%;
  height: 30rpx;
  /* margin-bottom: 10rpx; */
  
}
.in{
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 40rpx 40rpx 0 0;
}

/* 设置内容区 */
.content{
  margin-top: 10rpx;
  padding: 0 26rpx;

}
.content_controls{
  display: flex;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.content_controls .play{
 flex:1;
}
.content_controls .iconfont{
  margin-right: 10rpx;
}


.recommendsong_scroll{
  height: calc(100vh - 380rpx);
}

.scroll_item{
  width: 100%;
  /* height: 100rpx; */
  display: flex;
  position: relative;
  margin-bottom: 10rpx;
}
.scroll_item image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
} 
.music_info{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
}
.music_info .musicname{
  font-size: 30rpx;
}
.music_info .author{
  color:grey;
}
.music_info text{
  height: 50%;
  line-height: 50rpx;

  /* 当行文本溢出省略号 */
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow:ellipsis;

}
.scroll_item .iconfont{
  width:100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  position: absolute;
  right: 0;
}
