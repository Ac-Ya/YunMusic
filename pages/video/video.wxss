/* pages/video/video.wxss */


/* 头部搜索框 */
.videoContainer .header{
  width: 100%;
  padding: 20rpx 0;
}
.header .search{
  /* width: 94%; */
  width:680rpx;
  height: 60rpx;
  margin: 0 auto;
  border-radius: 30rpx;
  box-shadow: 6rpx 8rpx 8rpx 	#DCDCDC;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: 	#A9A9A9;
}

/* 导航栏区域 */
.nav-scroll{
  display: flex;
  white-space: nowrap;  /*不换行*/
  height: 60rpx;
  /* margin-bottom: 0rpx; */
}
.nav-scroll .nav-item{
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.nav-scroll .nav-content{
  box-sizing: border-box;
  height: 55rpx;
}
.nav-item .active{
  border-bottom: 2px solid #DD001B;
}

/* 视频区域 */
.video-scroll{
 padding-top: 10rpx;
 height: calc(100vh - 160rpx);
}
.scroll-item{
  padding: 10rpx 30rpx;
}
.video-item video,
.video-item image{
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
}
.video-footer{
  display: flex;
  padding: 10rpx 0;
  white-space: nowrap;
}
.avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.name{
  /* width: 60rpx; */
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  flex: 1;
  
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;

}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
.comments_praised .iconfont{
  font-size: 38rpx;
}
.video-content{
  padding: 20rpx 0;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  /* 多行文本显示 overflow:hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; */
  border-bottom: 2rpx solid #DCDCDC;
}

